  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/mongodb"
}

generator tables {
  provider = "node node_modules/prisma-enum-generator"
